<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DialogActivity" >

    <Button
        android:id="@+id/btnCustomAlert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="CustomAlert" />

    <Button
        android:id="@+id/btnSingleChoice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCustomAlert"
        android:layout_centerHorizontal="true"
        android:text="Single Choice" />

    <Button
        android:id="@+id/btnMultipleChoice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSingleChoice"
        android:layout_centerHorizontal="true"
        android:text="btnMultipleChoice" />

    <Button
        android:id="@+id/btnSimpleProgress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMultipleChoice"
        android:layout_centerHorizontal="true"
        android:text="btnSimpleProgress" />

    <Button
        android:id="@+id/btnSimpleProgressHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSimpleProgress"
        android:layout_centerHorizontal="true"
        android:text="btnSimpleProgressHorizontal" />

    <Button
        android:id="@+id/btnSimpleDialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSimpleProgressHorizontal"
        android:layout_centerHorizontal="true"
        android:text="btnSimpleDialog" />

    <Button
        android:id="@+id/btnBuiltinIdOfAndroid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSimpleDialog"
        android:layout_centerHorizontal="true"
        android:text="btnBuiltinIdOfAndroid" />

</RelativeLayout>